{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
